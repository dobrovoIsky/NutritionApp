<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.Views.ProfilePage"
             Title="Профіль">
    <VerticalStackLayout Spacing="20" Padding="30,0">

        <Label 
            Text="Налаштування"
            FontSize="22"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Frame Padding="10" CornerRadius="10">
            <HorizontalStackLayout VerticalOptions="Center" Spacing="15">
                <Label Text="Темна тема" VerticalOptions="Center" FontSize="18"/>
                <Switch x:Name="ThemeSwitch" Toggled="OnThemeToggled"/>
            </HorizontalStackLayout>
        </Frame>

        <Button
            Text="Вийти з профілю" 
            Clicked="OnLogoutButtonClicked"
            HorizontalOptions="Center"
            BackgroundColor="Red"
            TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>