<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.Views.EditProfilePage"
             Title="Редагувати профіль"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource PageBackground}">

    <Grid RowDefinitions="120,*" Padding="0">

        <!-- Верхній блок з градієнтом -->
        <Grid Row="0" Padding="0,16,0,16">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4F7DFF" Offset="0.0" />
                    <GradientStop Color="#E27D5F" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <VerticalStackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center">
                <Label Text="Редагувати профіль"
                       FontAttributes="Bold"
                       FontSize="24"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Контент -->
        <Border Grid.Row="1"
                BackgroundColor="{StaticResource CardBackground}"
                Stroke="{StaticResource BorderColor}"
                StrokeThickness="1"
                Padding="20"
                Margin="16,-32,16,0"
                StrokeShape="RoundRectangle 24">

            <ScrollView>
                <VerticalStackLayout Spacing="18">

                    <Label Text="Особиста інформація"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <Border Stroke="{StaticResource BorderColor}"
                            BackgroundColor="{StaticResource CardBackground}"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 16"
                            Padding="16">
                        <VerticalStackLayout Spacing="16">

                            <Label Text="Ім'я користувача"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Entry Text="{Binding UserProfile.Username}"
                                   Placeholder="Введіть ім'я"
                                   BackgroundColor="{StaticResource PageBackground}"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="16"/>

                            <Label Text="Зріст (см)"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Entry Text="{Binding UserProfile.Height}"
                                   Keyboard="Numeric"
                                   Placeholder="Введіть зріст"
                                   BackgroundColor="{StaticResource PageBackground}"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="16"/>

                            <Label Text="Вага (кг)"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Entry Text="{Binding UserProfile.Weight}"
                                   Keyboard="Numeric"
                                   Placeholder="Введіть вагу"
                                   BackgroundColor="{StaticResource PageBackground}"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="16"/>

                            <Label Text="Вік"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Entry Text="{Binding UserProfile.Age}"
                                   Keyboard="Numeric"
                                   Placeholder="Введіть вік"
                                   BackgroundColor="{StaticResource PageBackground}"
                                   TextColor="{StaticResource TextPrimary}"
                                   FontSize="16"/>
                        </VerticalStackLayout>
                    </Border>

                    <Label Text="Налаштування"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"/>

                    <Border Stroke="{StaticResource BorderColor}"
                            BackgroundColor="{StaticResource CardBackground}"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 16"
                            Padding="16">
                        <VerticalStackLayout Spacing="16">

                            <Label Text="Ціль"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Picker SelectedItem="{Binding UserProfile.Goal}"
                                    BackgroundColor="{StaticResource PageBackground}"
                                    TextColor="{StaticResource TextPrimary}"
                                    FontSize="16">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>lose weight</x:String>
                                        <x:String>maintain weight</x:String>
                                        <x:String>gain muscle</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>

                            <Label Text="Рівень активності"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Picker SelectedItem="{Binding UserProfile.ActivityLevel}"
                                    BackgroundColor="{StaticResource PageBackground}"
                                    TextColor="{StaticResource TextPrimary}"
                                    FontSize="16">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>sedentary</x:String>
                                        <x:String>lightly active</x:String>
                                        <x:String>moderately active</x:String>
                                        <x:String>very active</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>

                            <Label Text="Стать"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"/>
                            <Picker SelectedItem="{Binding UserProfile.Gender}"
                                    BackgroundColor="{StaticResource PageBackground}"
                                    TextColor="{StaticResource TextPrimary}"
                                    FontSize="16">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>male</x:String>
                                        <x:String>female</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </VerticalStackLayout>
                    </Border>

                    <Button Text="Зберегти"
                            Command="{Binding SaveCommand}"
                            HeightRequest="50"
                            CornerRadius="25"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalOptions="Center"
                            WidthRequest="200"/>

                </VerticalStackLayout>
            </ScrollView>
        </Border>

    </Grid>
</ContentPage>