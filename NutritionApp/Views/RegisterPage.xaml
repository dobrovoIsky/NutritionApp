<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.Views.RegisterPage"
             Title="Реєстрація">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="Реєстрація" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Entry x:Name="UsernameEntry" Placeholder="Ім'я користувача"/>
            <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True"/>
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Підтвердіть пароль" IsPassword="True"/>
            <Entry x:Name="HeightEntry" Placeholder="Зріст (см)" Keyboard="Numeric"/>
            <Entry x:Name="WeightEntry" Placeholder="Вага (кг)" Keyboard="Numeric"/>
            <Entry x:Name="AgeEntry" Placeholder="Вік" Keyboard="Numeric"/>

            <Picker x:Name="GoalPicker" Title="Ціль">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>lose weight</x:String>
                        <x:String>maintain weight</x:String>
                        <x:String>gain muscle</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Picker x:Name="ActivityPicker" Title="Рівень активності">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>sedentary</x:String>
                        <x:String>lightly active</x:String>
                        <x:String>moderately active</x:String>
                        <x:String>very active</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Picker x:Name="GenderPicker" Title="Стать">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>male</x:String>
                        <x:String>female</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
            <ActivityIndicator x:Name="LoadingIndicator" IsVisible="False"/>

            <Button Text="Зареєструватися" Clicked="OnRegisterButtonClicked"/>
            <Button Text="Повернутися до входу" Clicked="OnGoToLoginButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>