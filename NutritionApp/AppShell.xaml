<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NutritionApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NutritionApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Вхід"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <TabBar Route="MainApp">
        <ShellContent
            Title="Головна"
            Route="MainPage"
            Icon="home.png" 
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Раціон"
            Route="MealPlanPage"
            Icon="settings.png" 
            ContentTemplate="{DataTemplate local:MealPlanPage}" />

        <ShellContent
            Title="Історія"
            Route="HistoryPage"
            Icon="history.png" 
            ContentTemplate="{DataTemplate local:HistoryPage}" />

        <ShellContent
            Title="Тренування"
            Route="WorkoutPage"
            Icon="workout_icon.png"
            ContentTemplate="{DataTemplate local:WorkoutPage}" />

        <ShellContent
            Title="Профіль"
            Route="ProfilePage"
            Icon="user.png" 
            ContentTemplate="{DataTemplate local:ProfilePage}" />

    </TabBar>

</Shell>