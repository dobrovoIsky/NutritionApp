<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#4F7DFF</Color>
    <Color x:Key="Accent">#E27D5F</Color>

    <Color x:Key="TextPrimary">#111827</Color>
    <Color x:Key="TextSecondary">#6B7280</Color>

    <Color x:Key="PageBackground">#F6F7FB</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="BorderColor">#E4E7EE</Color>

    <Color x:Key="Success">#22C55E</Color>
    <Color x:Key="Error">#EF4444</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackground}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
</ResourceDictionary>